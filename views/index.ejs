<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        />
        <link rel="stylesheet" href="style.css" />
        <link rel="icon" type="image/x-icon" href="public/logo_main.png">
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
            crossorigin="anonymous"
            defer
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
            integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
            crossorigin="anonymous"
            defer
        ></script>
        <title>CGPET Registration Form | BIT Raipur</title>
    </head>
    <body>
        <section id="title">
            <!-- Nav Bar -->
                <div class="container-fluid">
                    <a class="navbar-brand" href="/"
                        ><img src="public/bit7.png" alt="bit_logo" class="img-fluid"
                    /></a>
                </div>
        </section>

        <section class="global-section-type-1">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-3 text-center col-sm-1 col-md-6 py-5">
                        <img src="public/logo_main.png" class="img-fluid py-4" alt="" width="35%" />
                        <form action="/" method="post">
                            <div class="mb-4">
                                <input
                                    type="text"
                                    placeholder="First Name"
                                    class="form-control"
                                    name="first_name"
                                    id="validationCustom01"
                                    required
                                />
                                <div class="valid-feedback">Looks good!</div>
                                <input
                                    type="text"
                                    placeholder="Last Name"
                                    class="form-control width"
                                    name="last_name"
                                />
                            </div>
    
                            <input
                                type="email"
                                name="email"
                                placeholder="Enter Valid Email"
                                class="form-control mb-4"
                                required
                            />
                            <div class="input-group mb-4">
                                <span class="input-group-text" id="basic-addon1"
                                    >+91</span
                                >
                                <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Enter 10 digit mobile number"
                                    aria-label="mobile number"
                                    aria-describedby="basic-addon1"
                                    name="phone"
                                    required
                                />
                            </div>
                            <select
                                class="form-select mb-4"
                                aria-label="Default select example "
                                name="branch"
                                required
                            >
                                <option selected>Select your Qualifiation</option>
                                <option value="PCM">Class 10th</option>
                                <option value="PCB">Class 12th</option>
                            </select>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                            <button
                                type="button"
                                class="btn btn-outline-primary"
                                onclick="myFunction()"
                            >
                                Reset
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <script>
            function myFunction() {
                document.querySelector("form").reset();
            }
        </script>
    </body>
</html>
