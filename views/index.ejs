<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        />
        <link rel="stylesheet" href="style.css" />
        <script
            src="https://kit.fontawesome.com/71fc53c7f6.js"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
            crossorigin="anonymous"
            defer
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
            integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
            crossorigin="anonymous"
            defer
        ></script>
        <title>Test Form</title>
    </head>
    <body>
        <section id="title">
            <div class="container-fluid">
                <!-- Nav Bar -->
                <nav class="navbar navbar-expand-lg">
                    <a class="navbar-brand" href="/"
                        ><img src="public/bit7.png" alt="bit_logo"
                    /></a>
                </nav>
            </div>
        </section>

        <section class="global-section-type-1">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <img src="public/logo_main.png" alt="" width="15%" />
                    <form action="/" method="post">
                        <div class="mb-4">
                            <input
                                type="text"
                                placeholder="First Name"
                                class="form-control"
                                name="first_name"
                                id="validationCustom01"
                                required
                            />
                            <div class="valid-feedback">Looks good!</div>
                            <input
                                type="text"
                                placeholder="Last Name"
                                class="form-control width"
                                name="last_name"
                            />
                        </div>

                        <input
                            type="email"
                            name="email"
                            placeholder="Enter Valid Email"
                            class="form-control mb-4"
                            required
                        />
                        <div class="input-group mb-4">
                            <span class="input-group-text" id="basic-addon1"
                                >+91</span
                            >
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Enter 10 digit mobile number"
                                aria-label="mobile number"
                                aria-describedby="basic-addon1"
                                name="phone"
                                required
                            />
                        </div>
                        <select
                            class="form-select mb-4"
                            aria-label="Default select example "
                            name="branch"
                            required
                        >
                            <option selected>Select your branch</option>
                            <option value="PCM">PCM</option>
                            <option value="PCB">PCB</option>
                            <option value="Commerce">Commerce</option>
                            <option value="Humanities">Humanities</option>
                        </select>
                        <button type="submit" class="btn btn-primary">
                            Submit
                        </button>
                        <button type="button" class="btn btn-outline-primary" onclick="myFunction()">
                            Reset
                        </button>
                    </form>
                </div>
            </div>
        </section>
        <script>
            function myFunction() {
                document.querySelector('form').reset();
            }
        </script>
    </body>
</html>
